<Window x:Class="Example_1944.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_1944"
        mc:Ignorable="d"
        Title="MainWindow" Height="258" Width="455" FontSize="20" x:Name="mainWindow" WindowStartupLocation="CenterScreen">
    <StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Имя" Margin="5" TextAlignment="Left" Width="50"/>
            <TextBox x:Name="txtContactName" Margin="5"   Width="350"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Номер телефона" Margin="5" TextAlignment="Left" Width="170"/>
            <TextBox x:Name="txtTelephoneNumber" Margin="5"   Width="230"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="btnPContact" Content="&lt;" Margin="5" Width="65" />
            <Button x:Name="btnNContact" Content="&gt;" Margin="5" Width="65" />
            <Button x:Name="btnAContact" Content="Добавить" Margin="5"  Width="125" />
            <Button x:Name="btnRContact" Content="Удалить" Margin="5"  Width="125" />
        </StackPanel>



    </StackPanel>
</Window>
