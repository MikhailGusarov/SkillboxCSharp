@using Example_2512.Models
@model CollWorkers

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
        <link rel="stylesheet" href="~/style.css" type="text/css" />

    </head>
    <body>
        <table class="simple-little-table"  cellspacing='0'>
            <tr>
                <th>Компания</th>
                <th>Имя</th>
                <th>Возраст</th>
                <th>Оплата труда</th>
            </tr>

            @for (int i = 0; i < Model.CollectionWorkers.Count; i++)
            {
            <tr>

                <th>@Model.CollectionWorkers[i].Company</th>
                <th>@Model.CollectionWorkers[i].Name</th>
                <th>@Model.CollectionWorkers[i].Age</th>
                <th>$ @Model.CollectionWorkers[i].Salary</th>

            </tr>
            }
        </table>
    </body>
</html>