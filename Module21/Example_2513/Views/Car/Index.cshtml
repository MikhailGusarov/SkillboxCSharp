
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Get Data</title>
    <style>
        .brd {
            border: 4px double black; /* Параметры границы */
            background: #e9e5e5; /* Цвет фона */
            padding: 20px; /* Поля вокруг текста */
        }
    </style>
</head>
<body>
    <div class="brd">
        <form action="~/Car/GetDataFromViewField" method="post">
            <label>Марка</label><br/>
            <input type="text" name="carMark" value="Audi"/><br />
            <label>Модель</label><br />
            <input type="text" name="carModel" value="A4"/><br />
            <label>Объём двигателя</label><br />
            <input type="number" name="carEngine" value="2" /><br />
            <p><input type="submit" value="Отправить" /></p>
        </form>
    </div>

    <hr />

    <div class="brd">
        <form action="~/Car/GetDataFromViewObject" method="post">
            <label>Марка</label><br />
            <input type="text" name="car.CarMark"  placeholder="Audi" /><br />
            <label>Модель</label><br />
            <input type="text" name="car.CarModel"  placeholder="Q8" /><br />
            <label>Объём двигателя</label><br />
            <input type="number" name="car.CarEngine"  placeholder="3" /><br />
            <p><input type="submit" value="Отправить" /></p>
        </form>
    </div>

    <hr />

    <div class="brd">
        <form action="~/Car/GetDataFromViewArrayObject" method="post">
            @for (int i = 0; i < 2; i++)
            {

                <p>Car # @(i + 1)</p>
                <p>
                    <label>Марка</label><br />
                    <input type="text" name="cars[@i].CarMark" /><br />

                    <label>Модель</label><br />
                    <input type="text" name="cars[@i].CarModel" /><br />

                    <label>Объём двигателя</label><br />
                    <input type="number" name="cars[@i].CarEngine" /><br />
                </p>


            }
            <input type="submit" value="Отправить всё" />
        </form>
    </div>








</body>
</html>